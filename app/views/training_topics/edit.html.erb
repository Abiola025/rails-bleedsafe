<h1>Edit Training Topics</h1>
<p>Please see the training topics below:</p>

<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Dashboard", dashboard_path%></li>
      <li class="breadcrumb-item"><%= link_to "Training Topics", training_topics_path %></li>
      <li class="breadcrumb-item">
        <%= link_to training_topic_path(@training_topic) do %>
        <%= @training_topic.name %> / </li>
      <% end %>
      <li class="breadcrumb-item active" aria-current="page"> Edit</li>
    </ol>
  </nav>
</div>

<!-- Create shared form for edit -->

<div class="container-lg border form mt-4">
<p>Current Image</p>
 <%= cl_image_tag(@training_topic.photo.key, height: 300, width: 400, crop: :fill) %>

<%= simple_form_for @training_topic do |f| %>
  <%= f.input :name %>
  <!-- resolve placeholder text -->
  <%= f.input :photo, as: :file %>
  <%= f.input :active %>
  <%= f.button :submit, class: "btn btn-primary mt-4 mb-4" %>
<% end %>
</div>
