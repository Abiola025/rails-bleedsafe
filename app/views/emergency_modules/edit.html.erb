<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Dashboard", dashboard_path%></li>
      <li class="breadcrumb-item"><%= link_to "Emergency Modules", emergency_modules_path%></li>
      <li class="breadcrumb-item">
        <%= link_to emergency_module_path(@emergency_module) do %>
        <%= @emergency_module.name %> / </li>
      <% end %>
      <li class="breadcrumb-item active" aria-current="page"> Edit</li>
    </ol>
  </nav>
</div>

<!-- Create shared form for edit -->

<div class="container-lg border form mt-4">
<p>Current Image</p>
 <%= cl_image_tag(@emergency_module.photo.key, height: 300, width: 400, crop: :fill) if @emergency_module.photo.attached?  %>

<%= simple_form_for @emergency_module do |f| %>
  <%= f.input :name %>
  <!-- resolve placeholder text -->
  <%= f.input :photo, as: :file %>
  <%= f.input :active %>
  <%= f.button :submit, class: "btn btn-primary mt-4 mb-4" %>
<% end %>
</div>
