
  <section class="hero hero-gradient text-center text-white py-5 position-relative overflow-hidden">
    <div class="hero-content position-relative z-1">
      <h1>Welcome to Bleed Safe</h1>
      <p>Empowering youth with essential emergency strategies for real-world situations.</p>
      <%= link_to "Get Started", training_modules_path,
          class: "btn btn-unique",
          data: { turbo_frame: "main_content" } %>
    </div>

    <!-- SVG Wave -->
    <svg class="hero-wave position-absolute bottom-0 start-0 w-100" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 150" preserveAspectRatio="none">
      <path fill="#f8f9fa" d="M0,96 C360,192 1080,0 1440,96 L1440,150 L0,150 Z"></path>
    </svg>
  </section>

  <!-- Quick Links Cards -->
  <section id="quick-links" class="container py-5">
    <h2 class="text-center mb-4">Quick Links</h2>
    <div class="row gy-4">
      <% quick_links = [
           { title: "Dashboard", path: dashboard_path, style: "primary", body: "Your personalized overview." },
           { title: "FAQ", path: questions_path, style: "secondary", body: "Answers to common questions." },
           { title: "About Us", path: about_us_path, style: "info", body: "Learn more about our mission." }
         ] %>

      <% quick_links.each do |link| %>
        <div class="col-sm-6 col-md-4 d-flex">
          <div class="card flex-fill">
            <div class="card-body text-center">
              <h5 class="card-title"><%= link[:title] %></h5>
              <p class="card-text"><%= link[:body] %></p>
              <%= link_to "Go", link[:path],
                  class: "btn btn-primary",
                  data: { turbo_frame: "main_content" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
